<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="match_parent" android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:orientation="vertical"
    tools:context="com.aish.hi.weship.Login"
    android:background="@drawable/swirl_pattern">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="227dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="#D9ffffff"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/user"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mobileemailofuserlogin"
            android:hint="enter 10 digit mobile no."/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passwordofuserlogin"
            android:hint="enter your password"/>


    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_gravity="left"
            android:text="forgot password?"
            android:id="@+id/forgotpassword" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="bottom">



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_weight="0.02">


            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:textSize="20dp"
                android:id="@+id/loginbuttonforusers"
                android:layout_gravity="bottom"
                android:background="#000000"
                android:textColor="#ffffff"
                android:layout_weight="0.53" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="DRIVERS"
                android:textSize="20dp"
                android:id="@+id/loginactivityfordriver"
                android:layout_gravity="bottom"
                android:background="#000000"
                android:textColor="#ffffff"
                android:layout_weight="0.53" />



        </LinearLayout>
    </LinearLayout>

</LinearLayout>
