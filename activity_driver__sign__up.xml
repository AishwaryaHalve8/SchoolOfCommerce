<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:orientation="vertical"
    android:background="@drawable/swirl_pattern"

tools:context="com.aish.hi.weship.Driver_Sign_Up">

    <LinearLayout
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical"
        android:background="#D9ffffff"
        >

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/driver"
            android:layout_gravity="center_horizontal"/>


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mobileemailofdriver"
            android:hint="enter 10 digit mobile no."/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passwordofdriver"
            android:hint="enter your password"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/repasswordofdriver"
            android:hint="re-enter your password"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameofdriver"
            android:hint="enter your full name"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vehicleno"
            android:hint="enter you vehicle number"
            />


    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >





    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="bottom">



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="vertical"
            android:background="#000000"
            android:textColor="#ffffff"
            android:layout_gravity="bottom"
            android:layout_weight="0.02">


            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="SIGN UP"
                android:textSize="20dp"
                android:background="#000000"
                android:textColor="#ffffff"
                android:id="@+id/signupbuttonofdriver"
                android:layout_gravity="bottom"
                android:layout_weight="0.53" />



        </LinearLayout>
    </LinearLayout>


</LinearLayout>
